<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yangzxcc.macintoshhd.pehs">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yangzxcc.macintoshhd.activities.Login">

        </activity>
        <activity
            android:name="com.yangzxcc.macintoshhd.activities.Profile"
            android:parentActivityName="com.yangzxcc.macintoshhd.activities.Home" />
        <activity android:name="com.yangzxcc.macintoshhd.activities.EditProfile" />
        <activity
            android:name="com.yangzxcc.macintoshhd.activities.RecordHistory"
            android:parentActivityName="com.yangzxcc.macintoshhd.activities.Home" />
        <activity
            android:name="com.yangzxcc.macintoshhd.activities.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.yangzxcc.macintoshhd.activities.RecordData"
            android:parentActivityName="com.yangzxcc.macintoshhd.activities.RecordHistory" />
        <activity android:name="com.yangzxcc.macintoshhd.activities.RecordList" />
        <activity android:name="com.yangzxcc.macintoshhd.activities.Physical" />
        <activity android:name="com.yangzxcc.macintoshhd.activities.Record" />
        <activity
            android:name="com.yangzxcc.macintoshhd.activities.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>